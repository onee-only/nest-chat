{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            {
                "include": "./global/modules/config/env/.*.env",
                "outDir": "./dist"
            },
            {
                "include": "./resources/**/*",
                "outDir": "./dist"
            }
        ]
    }
}
